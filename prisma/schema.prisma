datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model data_logging {
  id       String  @id @default(uuid())
  system   String?
  ipInfo   String?
  location String?

  createdAt DateTime @default(now())

  @@map("logging")
}

model data_registration {
  id              String   @id @default(uuid())
  name            String?
  email           String?
  cpf             String?
  data_nascimento String?
  description     String?
  createdAt       DateTime @default(now())

  @@map("registration")
}

model user_accounts {
  id        String   @id @default(uuid())
  name      String   @unique
  password  String?
  status    String?
  createdAt DateTime @default(now())

  @@map("users")
}
