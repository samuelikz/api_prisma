datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  system   String?
  ipInfo   String?
  location String?

  createdAt DateTime @default(now())

  @@map("users")
}

model Post {
  id              String   @id @default(uuid())
  nome            String?
  email           String?
  cpf             String?
  data_nascimento String?
  description     String?
  createdAt       DateTime @default(now())

  @@map("posts")
}
